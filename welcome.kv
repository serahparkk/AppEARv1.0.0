MDScreen:
    name: "welcome"

    MDFloatLayout:
        md_bg_color : [147/255,182/255,124/255,1]

        MDLabel :
            text : 'App'
            bold : True
            color : [35/255,31/255,32/255,1]
            font_size : 70
            pos_hint : {"center_x" : .32, "center_y" : .7}
            halign : "center"

        MDLabel :
            text : 'EAR'
            bold : True
            color : [233/255,255/255,251/255,1]
            font_size : 70
            pos_hint : {"center_x" : .65, "center_y" : .7}
            halign : "center"

        MDLabel :
            text : 'WE HEAR YOU'
            bold : True
            color : [233/255,255/255,251/255,1]
            font_size : 20
            pos_hint : {"center_y" : .6}
            halign : "center"

        MDTextButton :
            text: "Click here to continue"
            pos_hint : {"center_x": .5, "center_y": .3}
            font_size : 20
            color: [233/255,255/255,251/255,1]
            on_press: root.manager.current = "main"

